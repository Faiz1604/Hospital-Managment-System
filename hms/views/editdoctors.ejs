    <link rel="stylesheet" href="/admin/style/edit_doctor_form.css">
</head>

<body>
    <div class="container">

        <div class="form">
            <h1>UPDATE DOCTOR DETAILS</h1>
            <form action="/edit/submit/<%= dataToUpdate._id %>" method="post">
                <div class="form-group">
                    <label for="firstname">FirstName</label>
                    <input type="text" id="firstname" class="form-control" name="firstname" value="<%= dataToUpdate.firstname %> ">
                </div>
                <div class="form-group">
                    <label for="lastname">LastName</label>
                    <input type="text" id="lasttname" class="form-control" name="lasttname" value="<%= dataToUpdate.lastname %> ">
                </div>
                <div class="form-group">
                    <label>Gender</label><br>
                    <label for="gender">Male</label>
                    <input type="radio" id="gender" name="gender" value="Male">
                    <label for="gender">Female</label>
                    <input type="radio" id="gender" name="gender" value="Female">
                </div><br>
                <hr>
                <div class="form-group">
                    <label for="mobilenumber">MobileNo:</label>
                    <input type="tel" id="mobilenumber" class="form-control" name="mobilenumber" value="<%= dataToUpdate.mobilenumber %> " minlength="10" maxlength="10">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" class="form-control" name="email" value="<%= dataToUpdate.email %> ">
                </div>
                <div class="form-group">
                    <label for="idnumber">Identification No:</label>
                    <input type="tel" id="idnumber" class="form-control" name="idnumber" value="<%= dataToUpdate.idnumber %> ">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" id="address" class="form-control" name="address" value="<%= dataToUpdate.address %> ">
                </div>
                <div class="form-group">
                    <label for="specialities">Specialities</label>
                    <input type="text" id="specialities" class="form-control" name="specialities" value="<%= dataToUpdate.specialities %> ">
                </div>
                <button type="submit" id="submit_button" class="form-control">Submit</button>
            </form>
        </div>
    </div>
